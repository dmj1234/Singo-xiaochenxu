/* 全局checkbox大小 */
checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
}
/* 收货地址 */
.revice_address_row{
  border-bottom: 10rpx solid #eee;
}
.address_title{
  font-size: 34rpx;
  font-weight: bold;
  padding: 10rpx;
  border: 1rpx solid #ccc;
}
.user_info_row{
  padding: 10rpx;
  display: flex;
  font-size: 30rpx;
}
.user_info_row .user_info{
  flex: 5;
}
.user_info_row .user_phone{
  flex: 2;
}

/* 购物车内容 */
.cart_title{
  font-size: 34rpx;
  font-weight: bold;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.cart_item{
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.cart_chk_wrap, 
.cart_img_wrap{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_img_wrap{
  flex: 3;
}
.cart_img_wrap image{
  width: 70%;
}
.cart_info_wrap{
  flex: 6;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cart_info_wrap .goods_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_price_wrap{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.goods_price_wrap .goods_price{
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart_num_tool{
  display: flex;
}
.cart_num_tool .num_edit,
.cart_num_tool .goods_num{
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #ccc;
}
.cart_num_tool .goods_num{
  border: none;
}

/* 底部工具栏 */
.footer_tool{
  width: 100vw;
  height: 90rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.all_chk_wrap,
.total_price_wrap,
.order_pay_wrap{
  display: flex;
  justify-content: center;
  align-items: center;
}
.all_chk_wrap{
  flex: 2;
}
.total_price_wrap{
  flex: 5;
  flex-direction: column;
  align-items: flex-end;
  padding-right: 20rpx;
  font-size: 24rpx;
}
.total_price_wrap .total_price{
  font-size: 32rpx;
}
.total_price_wrap .total_price_text{
  color: var(--themeColor);
  font-weight: bold;
  font-size: 36rpx;
}
.order_pay_wrap{
  flex: 2;
  color: #fff;
  font-size: 34rpx;
  background-color: var(--themeColor);
}